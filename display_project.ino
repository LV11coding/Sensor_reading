void printdisplay(String a, int x, int y, int sise) {
  screen.setTextSize(sise);
  screen.setCursor(x, y);
  screen.print(a);
  screen.display();
}

void setup() {
  sensor.begin();
  screen.begin(SSD1306_SWITCHCAPVCC, 0x3C);
  screen.clearDisplay();
  screen.setTextColor(WHITE);
}

void loop() {
  temp = sensor.readTemperature();
  hum = sensor.readHumidity();
  if (temp != templast || hum != humlast) {
    screen.clearDisplay();
    printdisplay("Temperature:", 0, 0, 1);
    printdisplay(String(temp) + " C", 0, 12, 2);
    printdisplay("Humidity:", 0, 35, 1);
    printdisplay(String(hum) + "%", 0, 47, 2);
    screen.drawBitmap(96, 0, tempicon, 32, 32, WHITE);
    screen.drawBitmap(96, 35, humicon, 32, 32, WHITE);
    screen.drawCircle(66, 12, 3, WHITE);
    screen.display();
    humlast = hum;
    templast = temp;
  }
}
